<div class="checkboxes">
<% categories.each do |category| %>
  <div class="checkbox-container">
    <input class="styled-checkbox" id="post_category_ids" type="checkbox" name="post[category_ids][]" value="<%= category.id %>" data-checked=<%= locals[:post].categories.include?(category) %>>
    <span><%= translate_text category.name %></span>
  </div>
<% end %>
</div>
