%div{:class=>"show-user"}
  %div{:class=>"card"}
    = user_avatar(@user)
    %div{:class=>"card-body"}
      %p{:class=>"card-text"}= @user.name
      %p{:class=>"card-text"}= @user.email
    %div{:class=>"card-body"}
      = link_to "Edit", edit_user_path(@user), class: "btn btn-primary"
      = button_to 'Delete', user_path, method: :delete, class: "btn btn-danger"
      = link_to 'Back', users_path, class: "btn btn-secondary"
