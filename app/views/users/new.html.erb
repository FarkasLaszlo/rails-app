<h1> Create User </h1>
<%= form_with scope: :user, url: registration_path , local: true do |form| %>
  <%= render "layouts/errors", locals: @user %>
  <p>
  <%= form.label :name %><br>
  <%= form.text_field(:name, {:class => "form-control"}) %>
  </p>

  <p>
  <%= form.label :email %><br>
  <%= form.text_field(:email, {:class => "form-control"}) %>
  </p>

  <div class="form-group">
    <%= form.label :avatar, class: "file-upload btn btn-primary" %>
    <%= form.file_field :avatar, :class => "file-upload" %>
  </div>

  <div class="preview">
    <p>No files currently selected for the upload</p>
  </div>

  <p>
  <%= form.label :password %><br>
  <%= form.password_field(:password, {:class => "form-control"}) %>
  </p>

  <p>
  <%= form.label :password_confirmation %><br>
  <%= form.password_field(:password_confirmation, {:class => "form-control"}) %>
  </p>

  <p>
  <%= form.submit("Create an account", {:class => "btn btn-primary"}) %>
  </p>

<% end %>

<%= link_to 'Back', "javascript:history.back()" %>
