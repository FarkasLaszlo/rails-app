= form_for @user do |form|
  = render "layouts/errors", locals: @user
  %p
    = form.label :name
    %br
    = form.text_field :name, class: "form-control"

  %p
    = form.label :email
    %br
    = form.text_field :email, class: "form-control"

  %div{:class=>"form-group"}
    = form.label :avatar, class: "file-upload btn btn-primary"
    %br
    = form.file_field :avatar, class: "file-upload"
  %div{:class=>"preview"}
    %p No files currently selected for the upload


  %p
    = form.label :password
    %br
    = form.password_field :password, class: "form-control"

  %p
    = form.label :password_confirmation
    %br
    = form.password_field :password_confirmation, class: "form-control"

  %p
    = form.submit value: "Update user", class: "btn btn-primary"

= link_to 'Back', "javascript:history.back()"
