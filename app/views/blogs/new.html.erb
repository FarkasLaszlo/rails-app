<h1><%= translate_text "New post" %></h1>
<%= form_with scope: :blog, url: blogs_path , local: true do |form| %>
  <%= render "layouts/errors", locals: @blog %>

  <p>
  <%= form.label :title, translate_text("Title") %><br>
  <%= form.text_field(:title, {:class => "form-control"}) %>
  </p>

  <p>
  <%= form.label :content, translate_text("Content") %><br>
  <%= form.text_area(:content, {:class => "form-control", rows: "15"}) %>
  </p>
  <p><%= translate_text("Categories") %>:</p>
  <%= render "/categories/select.html.erb", locals: { blog: @blog } %>
  <hr>
  <p>
  <%= form.submit(translate_text("Submit your writing"), {:class => "btn btn-primary"}) %>
  </p>

<% end %>

<%= link_to translate_text('Back'), "javascript:history.back()" %>

