<p class="notice alert-success"><%= translate_text notice if notice %></p>
<div class="card text-white bg-info mb-3">
  <div class="card-header">
    <h1 class="card-title"><%= @blog.title %></h1>
    <h6 class="card-subtitle"><%= translate_text("Written by") %> <%= @blog.user&.name || translate_text("Deleted user") %></h6>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @blog.content %></p>
    <p class="card-text"><%= translate_text("Categories") %>:
      <% @blog.categories.each do |category| %>
        <span class="badge badge-pill badge-light"><%= translate_text category.name %></span>
    <% end %>
    </p>
  </div>
  <div class="card-footer">
    <%= creation_time_of @blog %>
    <%= link_to translate_text("Edit"), edit_blog_path(@blog), class: "btn btn-secondary" %>
    <%= link_to translate_text("Delete"), blog_path(@blog), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <%= link_to translate_text("Back"), blogs_path, class: "btn btn-secondary" %>
  </div>
</div>

<h3><%= translate_text "Comments" %></h3>
<%= link_to translate_text("Add comment"), new_blog_comment_path(blog_id: @blog.id), class:"btn btn-primary" %>
<hr>
<%= render @comments %>
