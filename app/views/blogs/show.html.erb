<div class="card text-white bg-info mb-3">
  <div class="card-header">
    <h1 class="card-title"><%= @blog.title %></h1>
    <h6 class="card-subtitle">Written by <%= blog_author(@blog) %></h6>
  </div>
  <div class="card-body">
    <p class="card-text"><%= @blog.content %></p>
    <p class="card-text">Category: <%= @blog.category %></p>
  </div>
  <div class="card-footer">
    <%= @blog.publication_date %>
    <%= link_to "Edit", edit_blog_path(@blog), class: "btn btn-secondary" %>
    <%= link_to "Delete", blog_path(@blog), method: :delete, class: "btn btn-danger" %>
    <%= link_to "Back", blogs_path, class: "btn btn-secondary" %>
  </div>
</div>

<h3>Comments</h3>
<%= link_to "Add comment", new_blog_comment_path(blog_id: @blog.id), class:"btn btn-primary" %>
<hr>
<% @comments.each do |comment| %>
  <div class="card text-white bg-dark mb-3">
    <div class="card-header">
      <h4 class="card-title"><%= comment_author(comment) %></h4>
    </div>
    <div class="card-body">
      <p class="card-text"><%= comment.content %></p>
    </div>
    <div class="card-footer">
      <%= comment.date %>
      <%= link_to "Delete", blog_comment_path(@blog, comment), method: :delete, class: "btn btn-danger" %>
      <%= link_to "Edit comment", edit_blog_comment_path(@blog, comment), class: "btn btn-primary" %>
    </div>
  </div>
<% end%>
